{
  "name": "supermarket-pos",
  "version": "1.0.0",
  "description": "Supermarket POS System",
  "main": "build/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "concurrently \"yarn start\" \"wait-on http://localhost:3001 && electron .\"",
    "electron-pack": "electron-builder"
  },
  "build": {
    "appId": "com.supermarket.pos",
    "productName": "Supermarket POS",
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.5.1",
    "axios": "^1.8.4",
    "react-icons": "^5.4.0",
    "react-toastify": "^11.0.3",
    "react-barcode": "^1.5.3",
    "tailwindcss": "^3.4.17",
    "electron-is-dev": "^3.0.1",
    "electron-pos-printer": "^1.3.6"
  },
  "devDependencies": {
    "react-scripts": "5.0.1",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "concurrently": "^9.1.2",
    "wait-on": "^8.0.3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "author": "Your Name",
  "homepage": "."
}
